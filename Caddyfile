# Reminder: X.509 wildcards only go one level deep, so this won't match a.b.sandbox.localhost ℹ️

bun.sandbox.localhost {
	tls "C:/Users/wulfr/.ssh/certificates/_wildcard.sandbox.localhost.pem" "C:/Users/wulfr/.ssh/certificates/_wildcard.sandbox.localhost-key.pem"

	reverse_proxy localhost:5000

	log {
		output file ./caddy.log
	}
}

