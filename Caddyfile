bun.localhost {
	tls "C:/Users/wulfr/.ssh/certificates/bun.localhost.pem" "C:/Users/wulfr/.ssh/certificates/bun.localhost-key.pem"

	reverse_proxy localhost:5000

	log {
		output file ./caddy.log
	}
}

vite.localhost {
	tls "C:/Users/wulfr/.ssh/certificates/vite.localhost.pem" "C:/Users/wulfr/.ssh/certificates/vite.localhost-key.pem"

	reverse_proxy localhost:5173

	log {
		output file ./caddy.log
	}
}

